<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background"
    tools:context=".SetupPlaylist">

    <TextView
        android:id="@+id/selectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:text="Sélectionnez un choix\nde playlists :"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:fontFamily="@font/carter_one"
        app:layout_constraintBottom_toTopOf="@+id/playlistScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/playlistScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/textLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectText">

        <LinearLayout
            android:id="@+id/playlistLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/randomPlaylistLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="25dp"
                android:paddingLeft="25dp"
                android:paddingEnd="25dp"
                android:paddingRight="25dp">

                <CheckBox
                    android:id="@+id/randomPlaylistCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/ic_launcher_background"
                    android:checked="true"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />
            </LinearLayout>

            <TextView
                android:id="@+id/randomPlaylistText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Playlist aléatoire"
                android:textAllCaps="false"
                android:textColor="@color/ic_launcher_background"
                android:textSize="25sp"
                app:fontFamily="@font/carter_one" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/randomSongtLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="25dp"
                android:paddingLeft="25dp"
                android:paddingEnd="25dp"
                android:paddingRight="25dp">

                <CheckBox
                    android:id="@+id/randomSongtCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/ic_launcher_background"
                    android:checked="true"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />
            </LinearLayout>

            <TextView
                android:id="@+id/randomSongtText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Musique aléatoire"
                android:textAllCaps="false"
                android:textColor="@color/ic_launcher_background"
                android:textSize="25sp"
                app:fontFamily="@font/carter_one" />
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>